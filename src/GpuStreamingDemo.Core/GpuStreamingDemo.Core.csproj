<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>

    <!-- During experimentation, keep this off.
         Turn back on once dependencies stabilise -->
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>

    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- ILGPU 1.3+ includes CPU, CUDA, and OpenCL backends -->
    <PackageReference Include="ILGPU" Version="1.3.0" />
    <PackageReference Include="ILGPU.Algorithms" Version="1.3.0" />
  </ItemGroup>

</Project>